<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/character"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:src="@drawable/character1" />

            <TextView
                android:id="@+id/holder_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lv.1"
                android:gravity="center"
                android:textSize="@dimen/font_size_main" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="200dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="ATK"
                    android:textSize="@dimen/font_size_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="DEF"
                    android:textSize="@dimen/font_size_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="HP"
                    android:textSize="@dimen/font_size_main"
                    android:textColor="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="MP"
                    android:textSize="@dimen/font_size_main"
                    android:textColor="@color/skyblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/holder_atk"
                    android:text="60"
                    android:gravity="right"
                    android:textSize="@dimen/font_size_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/holder_def"
                    android:text="50"
                    android:gravity="right"
                    android:textSize="@dimen/font_size_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/holder_hp"
                    android:text="300/300"
                    android:gravity="right"
                    android:textSize="@dimen/font_size_main"
                    android:textColor="@color/purple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/holder_mp"
                    android:text="200/200"
                    android:gravity="right"
                    android:textSize="@dimen/font_size_main"
                    android:textColor="@color/skyblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_bar2"
        android:layout_below="@+id/info_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text="다음 레벨까지 "
            android:gravity="center"
            android:textSize="@dimen/font_size_main"
            android:textColor="@color/jet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/holder_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="50"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_main" />
        <TextView
            android:text=" 걸음!"
            android:gravity="center"
            android:textSize="@dimen/font_size_main"
            android:textColor="@color/jet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/info_bar3"
        android:background="@color/pastel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_bar2"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1등! "
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_main" />

        <ImageView
            android:id="@+id/face1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/face1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 이정환 님"
            android:textColor="@color/jet"
            android:textSize="@dimen/font_size_main" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="                      30 레벨!"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_main" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_bar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_bar3"
        android:layout_marginTop="1dp"
        android:background="@color/skyblue"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2등! "
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_main" />

        <ImageView
            android:id="@+id/face2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/face2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 김강일 님"
            android:textColor="@color/jet"
            android:textSize="@dimen/font_size_main" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="                      20 레벨!"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_main" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_bar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_bar4"
        android:layout_marginTop="1dp"
        android:background="@color/transparent_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3등! "
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_main" />

        <ImageView
            android:id="@+id/face3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/face3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 황석범 님"
            android:textColor="@color/jet"
            android:textSize="@dimen/font_size_main" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="                      17 레벨!"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_main" />
    </LinearLayout>
</RelativeLayout>